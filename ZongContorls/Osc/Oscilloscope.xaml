<UserControl x:Class="ZongContorls.Oscilloscope"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZongContorls"
             xmlns:osc="clr-namespace:ZongContorls.Osc"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <osc:OscToolBar x:Name="OscToolBar_1" Grid.Row="0"></osc:OscToolBar>
        <osc:OscPanel Grid.Row="1"></osc:OscPanel>
        <osc:SignalListBox x:Name="SignalListBox_1" Grid.Row="2"></osc:SignalListBox>
    </Grid>
</UserControl>
